# Dim screen after 2.5m (150s)
timeout 150 'brightnessctl -s set 10'

# Restore brightness on resume
after-resume 'brightnessctl -r'

# Lock screen after 5m (300s)
timeout 290 'notify-send "Locking in 10s"' 
timeout 300 'riverctl spawn swaylock'

# Lock before sleep (full black screen)
before-sleep 'riverctl spawn swaylock -f -c 000000'

# Suspend after 10m (600s)
timeout 410 'notify-send "Suspending in 10s"'  
timeout 420 'systemctl suspend'
after-resume 'brightnessctl -r'

# Turn off screen after 3m (180s)
timeout 180 'wlopm off'
after-resume 'wlopm on'
